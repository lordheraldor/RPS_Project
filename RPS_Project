<!DOCTYPE html>
<html>
<head>
    <title>
    Rock Paper Scissors
    </title>
</head>
    <body>
        <script>
        function getRandomInt(max) {
    return Math.floor(Math.random() * Math.floor(max));
}

function computerPlay() {
    const NUMBER_OF_OPTIONS = 3;

    switch (getRandomInt(NUMBER_OF_OPTIONS)) {
        case 0:
            return "rock";
        case 1:
            return "paper";
        case 2:
            return "scissor";
    }
}

function playRound(playerSelection, computerSelection) {
    playerSelection = playerSelection.toLowerCase();

    let resultOfSelections = playerSelection + computerSelection;

    if (resultOfSelections === "rockscissor" || "scissorpaper" || "paperrock") {
        return true;
    } else {
        return false;
    }
}

function game() {
    let gamesPlayed = 0;

    let playerWins = 0;
    let computerWins = 0;

    while (gamesPlayed < 5) {
        let playerInput = prompt("Rock, Paper, or Scissors?");
        let resultOfGame;

        resultOfGame = playRound(playerInput, computerPlay());

        if (resultOfGame === true) {
            playerWins++;
            console.log("You win the round!")
        } else {
            computerWins++;
            console.log("You lose the round O.o")
        }

        ++gamesPlayed;
    }

    if (playerWins > computerWins) {
        console.log("You won the match!!")
    } else {
        console.log("The computer won the match T-T")
    }
}
        </script>
    </body>
</html>